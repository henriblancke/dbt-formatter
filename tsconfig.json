{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@types": [
        "types/index"
      ],
      "@core/*": [
        "core/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@constants": [
        "constants/index"
      ],
      "@constants/*": [
        "constants/*"
      ],
    },
    "types": [
      "node",
      "jest"
    ],
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src",
  ],
}