{
  "compilerOptions": {
    "baseUrl": "src",
    "paths" : {
      "@types": ["types/index"],
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants/index"],
      "@constants/*": ["constants/*"],
    },
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "declaration": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
  },
  "include": [
    "./src"
  ],
}
